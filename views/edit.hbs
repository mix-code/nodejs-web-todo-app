<h1 class="text-secondary font-weight-bold">Edit {{todo.title}}</h1>

<div class="row">
    <div class="col-md-12 col-sm-12 my-3">
        <div class="card p-3">

            <form action="/update/{{todo._id}}" method="POST">
                <div class="form-group">
                    <label for="title">Todo Title</label>
                    <input type="text" id="title" name="title" class="form-control" value="{{todo.title}}" placeholder="Write todo Title">
                </div>
                <div class="form-group">
                    <label for="body">Todo Body</label>
                    <textarea 
                        id="body" 
                        name="body"
                        class="form-control" 
                        rows="8" 
                        placeholder="Write todo Body">{{todo.description}}</textarea>

                    
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-secondary">edit</button>
                </div>
            </form>
        </div>
    </div>

</div>