<div class="row">

    <div class="col-md-8 col-sm-12">

        <div class="card todo-item text-muted mb-3 {{#if todo.completed}} completed {{/if}}">
            <div class="card-body d-flex justify-content-between align-items-center">

                <div class="d-flex justify-content-between align-items-baseline ">
                    <div class="card-title mb-0 ml-2 increase-font">{{todo.title}}</div>
                </div>
            </div>
        </div>

        <div class="card text-muted">
            <div class="card-body">{{todo.description}}</div>
        </div>
    </div>

    <div class="col-md-4 col-sm-12">
        <div class="card">
            <div class="card-body d-flex justify-content-around">
                <form action="/remove/{{todo._id}}" method="post">
                    <button type="submit" class="btn btn-outline-danger deleteBtn">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>


                <a href="/edit/{{todo._id}}" class="btn btn-outline-secondary">
                    <i class="fas fa-edit"></i>
                </a>

                <form action="/update/{{todo._id}}/completed-status" method="post">
                    {{#if todo.completed}}
                        <button class="btn btn-outline-secondary mark-todo-as-un-completed">
                            <i class="fas fa-times"></i>
                        </button>
                    {{else}}
                        <button class="btn btn-outline-secondary mark-todo-as-completed">
                            <i class="fas fa-check"></i>
                        </button>
                    {{/if}}
                </form>
                

            </div>
        </div>
    </div>

</div>